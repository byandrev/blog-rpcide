---
import Pagination from "./Pagination.astro";
import Post from "./Post.astro";

interface Props {
  posts: Array<any>;
  hasNext: boolean;
}

const { posts, hasNext } = Astro.props;
---

<section class="my-10">
  <h2 class="text-3xl font-bold mb-4">Art√≠culos recientes</h2>

  <div class="grid grid-cols-responsive gap-4">
    {
      posts.map((post) => {
        return <Post {...post} />;
      })
    }
  </div>

  {hasNext && <Pagination />}
</section>
